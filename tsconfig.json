{
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["ESNext"],
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "jsx": "react",
        "allowJs": true,
        "typeRoots": ["node_modules/@types", "./typings"],
        "types": ["mocha", "chai", "node", "global"]
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "experimentalResolver": true,
        "transpileOnly": true
    }
}
